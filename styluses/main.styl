@import 'nib/clearfix';

$header-color = #21C187;
$text-white-color = white;
$text-black-color = black;
$text-grey-color = #939393;
$mask-color = #333333;
$bg-grey-white-color = #EEEEEE;
$bg-grey-dark-color = #DDDDDD;
$text-title-color = #64BFA0;
$title-line-color = #CCCCCC;


body {
  font-family: 'Open Sans', sans-serif;
  font-size: 20px;
  text-align: center;
  width: 100%;
  background-color: $bg-grey-white-color;
}

.nav-header {
  background-color: $header-color;
  text-align: left;
  position: relative;
  z-index: 1;

  ul {
    margin: 0;
    list-style: none;

    li {
      display: inline;
      color: $text-white-color;

      &:hover {
        text-decoration: underline;
        cursor: pointer;
      }
    }
  }
}

.logo {
  width: 100%;
  min-height: 500px;
  background-color: $mask-color;
  color: $text-white-color;
  position: relative;
  z-index: 1;

  &:after {
    background-image: url('../images/hero.jpeg');
    background-size: cover;
    position: absolute;
    content: "";
    z-index: -1;
    opacity: .2;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }

  h2 {
    margin: 0;
    text-transform: uppercase;
    font-weight: bold;
    padding: 150px 0 10px 0;
    font-size: 60px;
  }

  p {
    max-width: 70%;
    font-size: 15px;
    font-weight: lighter;
    color: $text-grey-color;
    line-height: 1.4;
    margin: 0 auto;
  }
}

.title {
  margin: 0;
  padding: 50px 0 50px 0;
  color: $text-title-color;
  text-transform: uppercase;

  &:after {
    display: block;
    content: "";
    border: 2px solid $title-line-color;
    width: 5%;
    margin: 5px auto;
  }
}

.mean {
  width: 100%;
  min-height: 400px;

  ul {
    list-style: none;

    li {
      float: left;
      width: 33.3%
      box-sizing: border-box;

      i {
        font-size: 40px;
      }

      h4 {
        margin: 5px 0 20px 0;
        font-weight: bold;
      }

      p {
        color: $text-grey-color;
        width: 60%;
        margin: 0 auto;
      }
    }
  }

}

.samples {
  background-color: $bg-grey-dark-color;
  min-height: 1200px;

  .sample {
    margin-bottom: 50px;

    &:last-child {
      margin-bottom: 0;
    }

    ul {
      list-style: none;

      li {
        float: left;
        width: 50%;
        box-sizing: border-box;

        h4{
          text-align: left;
          margin: 5px 0 20px 30px;
          font-weight: bold;
        }

        p {
          color: $text-grey-color;
          width: 90%;
          margin: 10px auto;
          text-align: left;
        }

        .thumb {
          width: 100%;
          height: 300px;
          overflow: hidden;

          img {
            width: 80%;
            margin: 0 auto;
          }
        }
      }
      clearfix();
    }
  }

  #week2 ul {
    margin-left: 30px;

    .thumb {
      margin-left: -50px;
    }
  }
}

.learn {

  .show {
    position: relative;
    width: 80%;
    min-height: 300px;
    margin: 0 auto;
    margin-bottom: 50px;
    background-color: black;

    img {
      width: 100%;
      opacity: .3;
    }

    .information {
      position: absolute;
      background-color: $mask-color;
      top: 75%;
      left: 0;
      width: 100%;
      height: 150px;
      text-algin: left;
      padding: 0 10px;
      box-sizing: border-box;
      color: white;

      .detail {
        position: relative;
        padding-top: 20px;

        .avator {
          position: absolute;
          width: 100px;
          height: 100px;
          left: 50px;
          border-radius: 100%;
        }

        p {
          padding: 5px 0 0 0;
          font-size: 25px;
        }

        .contact {
          position: absolute;
          left: 400px;
          .name {
            font-weight: bold;
          }

          .role, .date {
            color: $text-grey-color;
            font-size: 15px;
          }
        }

        .like {
          text-decoration: none;
          position: absolute;
          font-size: 60px;
          width: 85px;
          top: 30px;
          right: 200px;

          color: white;
          background-color: $text-title-color;
          border: 2px solid $text-title-color;
          padding: 5px;
          border-radius: 100%;
        }
      }
    }
  }

}

